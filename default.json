{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:monorepos",
    "group:recommended",
    ":dependencyDashboard"
  ],
  "timezone": "UTC",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": false
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "groupName": "helm charts"
    },
    {
      "matchDatasources": [
        "go"
      ],
      "groupName": "go modules"
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "groupName": "npm packages"
    }
  ],
  "helm": {
    "enabled": true,
    "fileMatch": [
      "infra/charts/.+/Chart\\.yaml$"
    ]
  },
  "gomod": {
    "enabled": true,
    "fileMatch": [
      "svelte-backend/go\\.mod"
    ]
  },
  "npm": {
    "enabled": true,
    "fileMatch": [
      "svelte-frontend/package\\.json"
    ]
  },
  "kubernetes": {
    "enabled": true,
    "fileMatch": [
      "infra/.+\\.yaml$"
    ]
  }
}